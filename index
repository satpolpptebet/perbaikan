    /* Glow Animation */
    @keyframes glow {
      from { filter: drop-shadow(0 0 10px rgba(255,0,0,0.5)); }
      to { filter: drop-shadow(0 0 30px rgba(255,255,0,0.9)); }
    }

    /* Fade In */
    @keyframes fadeIn {
      from { opacity: 0; transform: scale(0.9); }
      to { opacity: 1; transform: scale(1); }
    }

    /* Blinking Text */
